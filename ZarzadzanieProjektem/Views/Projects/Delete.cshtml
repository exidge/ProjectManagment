@model ZarzadzanieProjektem.Models.Project

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@{ 
    bool isClaimed = false;
    foreach (var val in Model.Wykonawcy)
    {
        if (val.ProjektClaimed != null)
        {
            isClaimed = true;
            break;
        }
    }
}
@if (isClaimed)
{
    <h3>Nie można usunąć projektu, w który został ostatecznie przypisany</h3>
    @Html.ActionLink("Powrót do Listy Projektów", "Index")
}
else
{
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tytul)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tytul)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Opis)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wymagania)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wymagania)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
}
