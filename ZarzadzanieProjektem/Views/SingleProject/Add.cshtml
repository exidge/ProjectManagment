@model ZarzadzanieProjektem.Models.ProjectDetails

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-5">
        <h4>O projekcie</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Projekt.Tytul)
            </dt>

            <dd>
                @Html.TextAreaFor(model => model.Projekt.Tytul, 1, 50, new { @class = "form-control" })
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Projekt.Opis)
            </dt>

            <dd>
                @Html.TextAreaFor(model => model.Projekt.Opis, 5, 50, new { @class = "form-control" })
                
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Projekt.Wymagania)
            </dt>

            <dd>
                @Html.TextAreaFor(model => model.Projekt.Wymagania, 5, 50, new { @class = "form-control" })
            </dd>
            </dl>

</div>
    <div class="col-md-7">
        @using (Html.BeginForm("Add", "SingleProject", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Dodaj/Zmień Dokumenty</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ProjectDetailsId)
                @Html.HiddenFor(model => model.Projekt)

                <div class="form-group">
                    @Html.LabelFor(model => model.GitHubLink, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GitHubLink, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GitHubLink, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Dokumentacja założen", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" id="Dokumentacja" name="upload2" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Dokumentacja z realizacji", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" id="Dokumentacja" name="upload" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
                <h4>Szczegóły projektu zaktualizowane</h4>
            </div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
